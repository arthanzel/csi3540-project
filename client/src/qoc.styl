// Root CSS styles for Quantum of Cells

html, body {
    background: #f8fcff;
    font: 500 14px "Open Sans", sans-serif;
    height: 100%;
    margin: 0;
    width: 100%;
}

h2 {
    color: #2070a8;
    font-size: 16px;
    font-weight: 500;
    margin: 10px 0 5px 0;
    text-align: left;

    &:first-child {
        margin-top: 5px;
    }
}

a:hover {
    text-decoration: none;
}

.hidden {
    display: none;
}

form {
    padding: 10px;
}