.labeledInput {
    align-items: center;
    background: linear-gradient(white, darken(white, 1.5%));
    border-left: 3px solid transparent;
    border-radius: 5px;
    box-shadow: 0 1px 1px #aaa
    display: flex;
    flex-direction: row;
    height: 32px;
    margin: 5px;
    padding: 0 5px;

    & > .label {
        flex: 0 0 auto;
        font: 600 14px "Open Sans";
        margin-right: 5px;

        label {
            margin: 0;
        }
    }

    & > .expression {
        flex: 1 1 auto;
        input {
            background: transparent;
            border: 0;
            box-sizing: border-box;
            display: block;
            height: 100%;
            padding: 0px 5px;
            width: 100%;

            &:focus {
                // Remove the highlight
                border: 0;
                outline: 0;
            }
        }
    }

    & > .unit {
        font-size: 13px;
    }
}