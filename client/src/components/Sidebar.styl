sidebarWidth = 320px;

.qoc-sidebar-container {
    display: flex;
    flex: 0 0 auto;
}

.qoc-sidebar {
    background: #e8ecee;
    box-shadow: 0 0 10px #aaaab8;
    display: flex;
    flex: 0 0 sidebarWidth;
    flex-direction: column;
    margin-right: 8px;
    width: sidebarWidth;

    h1 {
        background: linear-gradient(lighten(#283848, 3%), #283848);
        border-bottom: 1px solid #102030;
        color: #f8fcff;
        font: oblique 600 20px "Open Sans";
        margin: 0;
        padding: 10px 15px;
        text-shadow: 1px 1px 3px #182028;

        a {
            color: #f8fcff;
            float: right;
        }
    }

    & > header, & > footer {
        flex: 0 0 auto;
    }

    & > section, & > div {
        flex: 1 0 auto;
    }
}