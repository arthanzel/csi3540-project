.qoc-tab-toolbox {
    & > nav {
        background: linear-gradient(lighten(#384858, 20%), lighten(#384858, 16%));
        display: flex;

        a {
            box-sizing: border-box;
            color: #f8fcff;
            font-size: 13px;
            flex: 1 0 auto;
            letter-spacing: 0.1em;
            padding: 10px;
            text-align: center;
            text-decoration: none;

            // 3D Borders
            border-right: 1px solid #384858;
            border-left: 1px solid lighten(#384858, 30%);
            &:first-child {
                border-left: 0;
            }
            &:last-child {
                border-right: 0;
            }

            &.active {
                background: lighten(#384858, 5%);
                box-shadow: inset 0 0 5px 3px darken(#384858, 5%);
                border-color: #384858;
            }
            &:not(.active):hover {
                background: linear-gradient(lighten(#384858, 25%), lighten(#384858, 10%));
            }
        }
    }

    & > .content {

    }
}